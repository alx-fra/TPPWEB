@model HabitAqui.Data.CategoriaHabitacao

@{
    ViewData["Title"] = "Eliminar Categoria de Habitação";
}

<h2 class="mb-4">Eliminar Categoria de Habitação</h2>

<h5 class="mb-2">Tem certeza de que deseja eliminar?</h5>

<div class="row">
    <hr />
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.NomeCategoria)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.NomeCategoria)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ativo)
            </dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteCat">
    <input type="hidden" asp-for="Id" />

    <div class="btn-group">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="ListaCat" class="btn btn-secondary">Voltar</a>
    </div>

</form>