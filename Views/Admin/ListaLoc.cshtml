@model IEnumerable<HabitAqui.Data.Locador>

@{
    ViewData["Title"] = "Lista de Locadores";
}
<h2 class="mb-4">Lista de Locadores</h2>
<div class="container mt-4">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <form asp-controller="Locadores" asp-action="ListaLoc" method="get">
        <div class="form-group">
            <label for="sortOrder">Ordenar por:</label>
            <div class="btn-group" role="group" aria-label="Ordenar">
                <a class="btn btn-secondary btn-sm" asp-action="ListaLoc" asp-route-sortOrder="@ViewBag.NomeSortParam">Nome ▲▼</a>
                <a class="btn btn-secondary btn-sm" asp-action="ListaLoc" asp-route-sortOrder="@ViewBag.EstadoSortParam">Estado ▲▼</a>
            </div>
        </div>
    </form>

    <table class="table table-striped mt-4">
        <thead class="thead-dark">
            <tr>
                <th class="h6">Nome</th>
                <th class="h6">Estado de Subscrição</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.EstadoSubscricao)</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-action="EditLoc" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-danger btn-sm" asp-action="DeleteLoc" asp-route-id="@item.Id">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a class="btn btn-secondary" asp-area="" asp-controller="Admin" asp-action="Admin">Voltar</a>
    </div>
</div>
