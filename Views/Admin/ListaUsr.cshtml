@model List<UserViewModel>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Lista de Utilizadores";
}

<h2 class="mb-4">Lista de utilizadores</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome de Utilizador</th>
            <th>Email</th>
            <th>Número de Telemóvel</th>
            <th>Estado</th>
            <th>Roles</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.IdUser</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @if (user.inativo)
                    {
                        <span class="text-danger">Inativo</span>
                    }
                    else
                    {
                        <span class="text-success">Ativo</span>
                    }
                </td>
                <td>
                    <span>@string.Join(", ", user.Roles)</span>
                </td>
                <td>

                    <a class="btn btn-sm btn-success" asp-action="Ativar" asp-route-id="@user.IdUser">Ativar</a>
                    <a class="btn btn-sm btn-secondary" asp-action="Inativar" asp-route-id="@user.IdUser">Inativar</a>
                    <a class="btn btn-sm btn-primary" asp-action="EditUsr" asp-route-id="@user.IdUser">Editar</a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a class="btn btn-secondary" asp-area="" asp-controller="Admin" asp-action="Admin">Voltar</a>
</div>
