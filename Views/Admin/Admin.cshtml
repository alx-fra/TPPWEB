@{
    ViewData["Title"] = "Administração";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<div class="container mt-4">
    <h1>Bem-vindo, administrador.</h1>

    <h4 class="mt-4">Gestão dos locadores:</h4>
    <div class="mb-3">
        <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="ListaLoc">Listar Locadores</a>
        <a class="btn btn-success" asp-area="" asp-controller="Admin" asp-action="CreateLoc">Criar Locador</a>
    </div>

    <h4 class="mt-4">Gestão das categorias de habitações:</h4>
    <div class="mb-3">
        <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="ListaCat">Listar Categorias de Habitações</a>
        <a class="btn btn-success" asp-area="" asp-controller="Admin" asp-action="CreateCat">Criar Categoria de Habitações</a>
    </div>

    <h4 class="mt-4">Gestão dos utilizadores:</h4>
    <div class="mb-3">
        <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="ListaUsr">Listar Utilizadores</a>
    </div>
</div>
