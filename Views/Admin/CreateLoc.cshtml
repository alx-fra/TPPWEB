@model HabitAqui.Data.Locador

@{
    ViewData["Title"] = "Adicionar Locador";
}

<h2 class="mb-4">Adicionar Locador</h2>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateLoc" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" asp-for="EstadoSubscricao" />
                <label class="form-check-label" for="EstadoSubscricao">@Html.DisplayNameFor(model => model.EstadoSubscricao)</label>
            </div>
            </p>
            <div class="btn-group">
                <button type="submit" class="btn btn-success">Criar</button>
                <a asp-area="" asp-controller="Admin" asp-action="Admin" class="btn btn-secondary">Voltar</a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
