@model HabitAqui.Data.Arrendamento

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Arrendamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarAval">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="DataInicioContrato" />
            <input type="hidden" asp-for="DataFimContrato" />
            <input type="hidden" asp-for="CustoArrendamento" />
            <input type="hidden" asp-for="estado" />
            <input type="hidden" asp-for="HabitacaoId" />
            <input type="hidden" asp-for="PeriodoMinimo" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="Avaliacao" class="control-label"></label>
                <input asp-for="Avaliacao" class="form-control" />
                <span asp-validation-for="Avaliacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Arrendamentos">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
