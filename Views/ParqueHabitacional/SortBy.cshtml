@model IEnumerable<HabitAqui.Data.Habitacao>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index" method="post">
    <label for="filter">Pesquisa:</label>
    <input type="text" id="filter" name="filter" />
    <input type="submit" value="Search">
</form>

<a asp-action="SortBy" asp-route-sortOrder="localizacao_asc">Localização Ascendente</a>
<a asp-action="SortBy" asp-route-sortOrder="localizacao_desc">Localização Descendente</a>
<a asp-action="SortBy" asp-route-sortOrder="tipo_asc">Tipo Ascendente</a>
<a asp-action="SortBy" asp-route-sortOrder="tipo_desc">Tipo Descendente</a>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Localizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoHabitacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustoArrendamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaHabitacaoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LocadorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoHabitacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustoArrendamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaHabitacaoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocadorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
