@model IEnumerable<HabitAqui.ViewModels.HabitacaoViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Localizacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoHabitacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustoArrendamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvaliacaoLocador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaHabitacaoId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeLocador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemUrl)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoHabitacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustoArrendamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvaliacaoLocador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaHabitacaoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeLocador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagemUrl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
